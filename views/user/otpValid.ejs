<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>The book</title>
</head>
<body>
    
    <main>

      <!-- otp form -->
      <div class="c-red">
        <%= locals.message || ""  %>
      </div>
      <div class="row justify-content-center mt-5">
        <p id="error" class="c-red"></p>
        
        
        
      </div>

      <body class="container-fluid h-100 bg-body-tertiary  d-block">
        <div class="row justify-content-center align-items-center d-flex otp-box">
          <div class="col-12 col-md-6 col-lg-4" style="min-width: 500px;">
            <div class="card bg-white mb-5 mt-5 border-0" style="box-shadow: 0 12px 15px rgba(0, 0, 0, 0.02);">
              <div class="card-body p-5 text-center shadow">
                
      
                <form class="mx-3 user-register" id="form" action="/home/login/email/otp" method="post">
                  <h1>Verification required</h1>
              <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Ener OTP here</label>
                    <input type="number" name="otp" class="form-control" id="email" aria-describedby="emailHelp" required>
                  </div>
                  <div id="timer"></div>
                  <button type="submit" class="btn btn-primary mb-3">Continue</button>
              </form>
                         
              <form class="container user-register d-flex justify-content-center mt-5" action="/home/login/email/otp/resend" method="get" >
          
                <button type="submit" class="btn btn-primary mb-3 button-len d-none" id="resendBtn" onclick="resendOTP()">Resend otp</button>
              </form>
      
          
                      
                      
                      <!-- <p class="resend text-muted mb-0">
                      Didn't receive code? <a href="">Request again</a>
                    </p> -->
              </div>
            </div>
          </div>
        </div>
      
    
      </main>

      <script>
        let showbutton = ()=>{
          let btn = document.getElementById("resendBtn")
          btn.classList.remove("d-none")
        }
  
        let updateTimer = (seconds)=>{
          let timerText = document.getElementById("timer")
          timerText.innerText = "You can resend otp in "+ seconds +" seconds"
        }
        let hideTimer = ()=>{
          let timerText = document.getElementById("timer")
          timerText.style.display = "none"
        }
        let timeLeft = 60
        let timer = setInterval(()=>{
          timeLeft--
          updateTimer(timeLeft)
          if(timeLeft<=0){
            clearInterval(timer)
           showbutton()
           hideTimer()
          }
        },1000)
  
        
      </script>
          
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>   
</body>
</html>