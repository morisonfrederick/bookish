        <script>
            let orderBTN = document.getElementById("allorder");
                                orderBTN.addEventListener("click", function () {
                                    window.location.href = "/home/account/orders";
                                });

                                let addressDiv = document.getElementById("addressDiv");
                                addressDiv.addEventListener("click", function () {
                                    window.location.href = "/home/account/address";
                                });
            document.getElementById('passwordForm').addEventListener('submit', function(event) {
                console.log("event====");
                // event.preventDefault()
        const password = document.getElementById("password").value 
        const newPassword = document.getElementById("newPassword").value
        const confirmPassword = document.getElementById("confirmPassword").value
        console.log(password);
        // const errorPass = document.getElementById("errorPass").value
        const errorMatch = document.getElementById("errorMatch")
        const newPass = document.getElementById("newPass")
    
    
        var passwordPattern = /^(?=.*[A-Z])(?=.*\d).{8,}$/;
        if (!password.match(passwordPattern)) {
            newPass.innerText = 'Password must be at least 8 characters, include one uppercase letter and one number';
            event.preventDefault();
            return;
        }
        if(newPassword!==confirmPassword){
            errorMatch.innerText = "Password should match"
            event.preventDefault();
            return;
        }
          });
    
        </script>   
                    
                        
                    


                    